---
const { link, title, icon } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="bg-[#151515] rounded-lg p-4 flex items-center gap-4 hover:translate-y-[-2px] transition-transform"
>
  <img src={icon} alt="web" class="w-12 h-12 animate-pulse" />
  <h1 class="text-gray-200 font-bold text-lg">{title}</h1>
</a>
